[user]
	name = Ivan Tse

[color]
	ui = auto
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[alias]
   br = branch
  br-merged = branch --merged
   c = commit
   cp = cherry-pick
   cpa = cherry-pick --abort
   cpc = cherry-pick --continue
   d = diff
   ds = diff --staged
   co = checkout
   cob = checkout -b
   l = log
   lp = log -p
   rb = rebase
   s = status
   tree = log --graph --oneline --all


[include]
	path = ~/.gitconfig.local
